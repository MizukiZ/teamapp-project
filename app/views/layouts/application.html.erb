<!DOCTYPE html>
<html>
  <head>
    <!-- Rails default meta tags -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Firebase site auth and external scripts -->
    <meta name="google-site-verification" content="EV8XaWJLIAN4UWa0QCe9OOdr8iINFRMxk-yAxn6BCcc" />
    <script src="https://www.gstatic.com/firebasejs/5.5.6/firebase.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.5.3/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.5.3/firebase-auth.js"></script>
    <script src="https://cdn.firebase.com/libs/firebaseui/3.4.1/firebaseui.js"></script>
    
    <!-- Firebase locally stored scripts -->
    <%= javascript_include_tag('config.js') %>
    <%= javascript_include_tag('firebase.js') %>

    <!-- Material Design Theming -->
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
    
    <!-- Firebase local and external css files -->
    <link type="text/scss" rel="stylesheet" src="/app/assets/stylesheets/firebase.scss" />
    <link type="text/css" rel="stylesheet" href="https://cdn.firebase.com/libs/firebaseui/3.4.1/firebaseui.css" />

    <!-- Rails default js and css link tags -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <title>Team Creator</title>
  </head>

  <body>

    <%= render partial: 'layouts/navbar' %>

    <div class="container-fluid text-center">    
      <div class="row content">
        <div class="col-sm-2 sidenav">
          <%= render partial: 'layouts/sidenav' %>
        </div>
        <div class="main col-sm-8 text-left">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
