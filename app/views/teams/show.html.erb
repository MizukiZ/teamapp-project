<h2>Team: <%= @team.name %></h2>
<br>

<h4>Players</h4>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Player Name</th>
                                <th>Date Added</th>
                                <th>Show</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @team.players.each do |player| %>
                                <tr>
                                <td><%= player.name %></td>
                                <td><%= player.created_at %></td>
                                <td><%= link_to 'Show', team_player_path(player) %></td>
                                <td><%= link_to 'Edit', edit_team_player_path(player) %></td>
                                <td>
                                  <%= link_to 'Delete Player', [player.team, player],
                                              method: :delete,
                                              data: { confirm: 'Are you sure?' } %>
                                </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<h4>Add a new player</h4>
<%= render 'players/form' %>

